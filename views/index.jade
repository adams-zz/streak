extends layout

block content
    div.container(data-role='page')
        header(data-role='header')
            h1= title
        div(data-role='content')
            - if(items.length)
                table(data-role='listview')
                    - items.forEach(function(item){
                        thead
                            tr.row
                                td.span12
                                    h4.question= item['question']
                        tbody
                            tr.row
                                td.span12
                                    p.span1.gametime= item['gametime']
                                    div.span1.sporticon
                                        img.sporticon(src=item['sporticon'], alt='sporticon', align="middle")
                                    div.span3
                                        a(href= item['team1url'], title=item['team1'], target='_blank')
                                            strong= 'Team 1: ' + item['team1full']
                                    p.span1= item['team1result']
                                    div.span1.status
                                        a(href= item['statusurl'], title=item['status'], target='_blank')
                                            p= item['status']
                                    p.span1= item['team1perc']
                                    div.span1.heat
                                        p= item['heat']
                                    button.span1.btn.pick= 'Pick'
                                        a(href= "http://streak.espn.go.com/en/" + item['team1pickurl'])

                            tr.row
                                td.span12
                                    div.span1
                                    div.span1
                                        p.sportname= item['sportname']
                                    div.span3
                                        a(href= item['team2url'], title=item['team2'], target='_blank')
                                            strong= 'Team 2: ' + item['team2full']
                                    p.span1= item['team2result']
                                    div.span1
                                    p.span1= item['team2perc']
                                    div.span1
                                    button.span1.btn.pick= 'Pick'
                                        a(href= "http://streak.espn.go.com/en/" + item['team2pickurl'])
                    - })

