extends layout

block content
    div.container(data-role='page')
        header(data-role='header')
            h1= title
        div(data-role='content')
            - if(items.length)
                table(data-role='listview')
                    - items.forEach(function(item){
                        thead
                            tr.row
                                td.span8
                                    h3.question= item['question']
                        tbody
                            tr.row
                                td.span8
                                    p.span1= item['gametime']
                                    img.span1(src=item['sporticon'], alt='sporticon', class="sport-icon")
                                    p= item['sportname']
                                    div.span1
                                        a(href= item['team1url'], title=item['team1'], target='_blank')
                                            strong= 'Team 1: ' + item['team1full']
                                    p.span1= item['team1result']
                                    div.span1
                                        a(href= item['statusurl'], title=item['status'], target='_blank')
                                            strong= 'Status: ' + item['status']
                                    p.span1= 'Team 1 %: ' + item['team1perc']
                                    p.span1= 'Heat: ' + item['heat']
                                    //- p= 'Heat Title: ' + item['heattitle']
                                    //- p= 'Streak: ' + item['streak']
                                    //- p= 'Discuss Count: ' + item['discusscount']
                            tr.row
                                td.span8
                                    div.span1
                                        a(href= item['team2url'], title=item['team2'], target='_blank')
                                            strong= 'Team 2: ' + item['team2full']
                                    p.span1= item['team2result']
                                    p.span1= 'Team 2 %: ' + item['team2perc']
                    - })
